{
  "title": "DH Secure Chat - Overview",
  "uid": "dh-secure-chat-overview",
  "tags": ["dh-secure-chat", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "type": "stat",
      "title": "Active WebSocket Connections",
      "targets": [
        {
          "expr": "sum(chat_websocket_connections_active)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 50, "color": "red"}
            ]
          },
          "unit": "short",
          "min": 0
        }
      },
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "orientation": "auto"
      }
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "type": "timeseries",
      "title": "HTTP Requests Rate",
      "targets": [
        {
          "expr": "sum(rate(auth_requests_total[5m]))",
          "legendFormat": "Auth Service",
          "refId": "A"
        },
        {
          "expr": "sum(rate(chat_requests_total[5m]))",
          "legendFormat": "Chat Service",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 3,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "type": "timeseries",
      "title": "HTTP Request Duration (p95, p99)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(auth_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Auth p95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(auth_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Auth p99",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(chat_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Chat p95",
          "refId": "C"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(chat_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Chat p99",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 4,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "type": "timeseries",
      "title": "Database Connection Pool",
      "targets": [
        {
          "expr": "sum(db_pool_acquired_connections)",
          "legendFormat": "Acquired",
          "refId": "A"
        },
        {
          "expr": "sum(db_pool_idle_connections)",
          "legendFormat": "Idle",
          "refId": "B"
        },
        {
          "expr": "sum(db_pool_max_connections)",
          "legendFormat": "Max",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 5,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "type": "timeseries",
      "title": "Circuit Breaker State",
      "targets": [
        {
          "expr": "circuit_breaker_state",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.5, "color": "yellow"},
              {"value": 1.5, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 6,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
      "type": "timeseries",
      "title": "WebSocket Messages Rate",
      "targets": [
        {
          "expr": "sum(rate(chat_websocket_messages_total[5m])) by (message_type)",
          "legendFormat": "{{message_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
