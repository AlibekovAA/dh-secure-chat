      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 72},
      "type": "table",
      "title": "Top Domain Errors by Code",
      "targets": [{
        "expr": "topk(10, sum(rate(domain_errors_total[5m])) by (code, category))",
