      "title": "Circuit Breaker State",
      "targets": [{
        "expr": "circuit_breaker_state",
        "legendFormat": "{{name}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.5, "color": "yellow"},
              {"value": 1.5, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 18,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 64},
      "type": "timeseries",
      "title": "JWT Validations",
      "targets": [
        {
          "expr": "sum(rate(jwt_validations_total[5m]))",
          "legendFormat": "Total",
          "refId": "A"
        },
        {
          "expr": "sum(rate(jwt_validations_failed_total[5m]))",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
