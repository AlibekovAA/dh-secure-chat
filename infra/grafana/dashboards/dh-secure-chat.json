{
  "title": "DH Secure Chat - Comprehensive Monitoring",
  "uid": "dh-secure-chat-comprehensive",
  "tags": ["dh-secure-chat", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "type": "stat",
      "title": "Active WebSocket Connections",
      "targets": [{
        "expr": "sum(chat_websocket_connections_active)",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 50, "color": "red"}
            ]
          },
          "unit": "short",
          "min": 0
        }
      }
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "type": "stat",
      "title": "WebSocket Connections Rejected",
      "targets": [{
        "expr": "sum(rate(chat_websocket_connections_rejected_total[5m]))",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.1, "color": "yellow"},
              {"value": 1, "color": "red"}
            ]
          },
          "unit": "reqps",
          "min": 0
        }
      }
    },
    {
      "id": 3,
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "type": "stat",
      "title": "User Existence Cache Size",
      "targets": [{
        "expr": "sum(chat_websocket_user_existence_cache_size)",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        }
      }
    },
    {
      "id": 4,
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "type": "stat",
      "title": "Message Processor Queue Size",
      "targets": [{
        "expr": "sum(chat_websocket_message_processor_queue_size)",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 1000, "color": "yellow"},
              {"value": 5000, "color": "red"}
            ]
          },
          "unit": "short",
          "min": 0
        }
      }
    },
    {
      "id": 5,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "type": "timeseries",
      "title": "HTTP Requests Rate",
      "targets": [
        {
          "expr": "sum(rate(auth_requests_total[5m]))",
          "legendFormat": "Auth Service",
          "refId": "A"
        },
        {
          "expr": "sum(rate(chat_requests_total[5m]))",
          "legendFormat": "Chat Service",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      }
    },
    {
      "id": 6,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "type": "timeseries",
      "title": "HTTP Request Duration (p50, p95, p99)",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(auth_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Auth p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(auth_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Auth p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(auth_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Auth p99",
          "refId": "C"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(chat_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Chat p50",
          "refId": "D"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(chat_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Chat p95",
          "refId": "E"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(chat_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Chat p99",
          "refId": "F"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      }
    },
    {
      "id": 7,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "type": "timeseries",
      "title": "HTTP Errors by Status Code",
      "targets": [{
        "expr": "sum(rate(http_errors_total[5m])) by (status)",
        "legendFormat": "{{status}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      }
    },
    {
      "id": 8,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "type": "timeseries",
      "title": "Domain Errors by Category",
      "targets": [{
        "expr": "sum(rate(domain_errors_total[5m])) by (category)",
        "legendFormat": "{{category}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      }
    },
    {
      "id": 9,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
      "type": "timeseries",
      "title": "WebSocket Messages Rate by Type",
      "targets": [{
        "expr": "sum(rate(chat_websocket_messages_total[5m])) by (message_type)",
        "legendFormat": "{{message_type}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      }
    },
    {
      "id": 10,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
      "type": "timeseries",
      "title": "WebSocket Errors by Type",
      "targets": [{
        "expr": "sum(rate(chat_websocket_errors_total[5m])) by (error_type)",
        "legendFormat": "{{error_type}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      }
    },
    {
      "id": 11,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
      "type": "timeseries",
      "title": "Dropped Messages by Type",
      "targets": [{
        "expr": "sum(rate(chat_websocket_dropped_messages_total[5m])) by (message_type)",
        "legendFormat": "{{message_type}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 12,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
      "type": "timeseries",
      "title": "WebSocket Message Send Duration (p95, p99)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(chat_websocket_message_send_duration_seconds_bucket[5m])) by (le, message_type))",
          "legendFormat": "p95 {{message_type}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(chat_websocket_message_send_duration_seconds_bucket[5m])) by (le, message_type))",
          "legendFormat": "p99 {{message_type}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      }
    },
    {
      "id": 13,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
      "type": "timeseries",
      "title": "User Existence Cache Hit Rate",
      "targets": [
        {
          "expr": "sum(rate(chat_websocket_user_existence_cache_hits_total[5m]))",
          "legendFormat": "Hits",
          "refId": "A"
        },
        {
          "expr": "sum(rate(chat_websocket_user_existence_cache_misses_total[5m]))",
          "legendFormat": "Misses",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      }
    },
    {
      "id": 14,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 48},
      "type": "timeseries",
      "title": "Database Connection Pool",
      "targets": [
        {
          "expr": "sum(db_pool_acquired_connections)",
          "legendFormat": "Acquired",
          "refId": "A"
        },
        {
          "expr": "sum(db_pool_idle_connections)",
          "legendFormat": "Idle",
          "refId": "B"
        },
        {
          "expr": "sum(db_pool_max_connections)",
          "legendFormat": "Max",
