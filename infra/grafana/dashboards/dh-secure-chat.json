          "refId": "A"
        },
        {
          "expr": "sum(rate(refresh_tokens_issued_total[5m]))",
          "legendFormat": "Refresh Tokens Issued",
          "refId": "B"
        },
        {
          "expr": "sum(rate(access_tokens_revoked_total[5m]))",
